<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.szyl.szyllibrary.view.TsCustomActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/colorPrimary"
        app:cus_title="增加水印"
        app:isnot_right_pic="true" />


    <ImageView
        android:id="@+id/show_iv"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:src="@mipmap/home_bg"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wenzi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="22dp"
            android:background="@drawable/btn_chongzhi"
            android:gravity="center"
            android:padding="5dp"
            android:text="文字"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_picter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="22dp"
            android:background="@drawable/btn_chaxun"
            android:gravity="center"
            android:padding="5dp"
            android:text="图片"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>